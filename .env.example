# HFO Gen90 Environment — Example
# Copy this to .env and fill in secrets.
# See AGENTS.md § PAL System for documentation.

HFO_GENERATION=89
HFO_OPERATOR=TTAO
HFO_HIVE=V
# HFO_ROOT=c:\hfoDev
HFO_FORGE=hfo_gen_90_hot_obsidian_forge
HFO_SSOT_DB=hfo_gen_90_hot_obsidian_forge/2_gold/resources/hfo_gen90_ssot.sqlite
HFO_BRONZE=0_bronze
HFO_SILVER=1_silver
HFO_GOLD=2_gold
HFO_HFO=3_hyper_fractal_obsidian
HFO_SECRET=CHANGE_ME_GENERATE_A_REAL_SECRET
HFO_FTS_ENABLED=true
HFO_PRECOMMIT_ENABLED=true
HFO_STRICT_MEDALLION=true
HFO_STIGMERGY_PROOF=true

# ── Daemon Feature Flags ─────────────────────────
# Master kill-switch (false = ALL daemons stop)
HFO_DAEMONS_ENABLED=true

# Per-daemon enable/disable
HFO_DAEMON_P2_CHIMERA_ENABLED=true
HFO_DAEMON_P4_SINGER_ENABLED=true
HFO_DAEMON_P4_PROSPECTOR_ENABLED=false
HFO_DAEMON_P5_ENABLED=true
HFO_DAEMON_P6_SWARM_ENABLED=true
HFO_DAEMON_NPU_EMBEDDER_ENABLED=true
HFO_DAEMON_RESOURCE_GOVERNOR_ENABLED=true
HFO_DAEMON_WEB_CHAT_ENABLED=false
HFO_DAEMON_WATCHDOG_ENABLED=true

# ── Port Model Assignments ───────────────────────
HFO_P2_MODEL=gemma3:4b
HFO_P4_PROSPECTOR_MODEL=gemma3:4b
HFO_P5_MODEL=phi4:14b
HFO_P6_MODEL=gemma3:4b
HFO_P6_ADVANCED_MODEL=qwen3:8b

# ── GPU / VRAM Budget ────────────────────────────
# Intel Arc 140V = 16 GB VRAM
HFO_VRAM_TOTAL_GB=16.0
HFO_VRAM_BUDGET_GB=12.0
HFO_VRAM_RESERVE_GB=2.0
HFO_GPU_ALWAYS_UTILIZED=true

# ── CPU Budget ───────────────────────────────────
HFO_CPU_THROTTLE_PCT=75.0
HFO_CPU_RESUME_PCT=60.0
HFO_CPU_RESERVE_PCT=30.0

# ── RAM Budget ───────────────────────────────────
HFO_RAM_THROTTLE_GB=4.0
HFO_RAM_RESUME_GB=6.0
HFO_RAM_RESERVE_GB=4.0

# ── NPU (Intel AI Boost) ────────────────────────
HFO_NPU_ALWAYS_ON=true
HFO_NPU_EMBEDDER_BATCH=32
HFO_NPU_EMBEDDER_INTERVAL_S=60

# ── Cloud APIs ───────────────────────────────────
HFO_GEMINI_ENABLED=true
HFO_GEMINI_RPM_CAP=15
HFO_GEMINI_RPD_CAP=1500
HFO_OPENROUTER_ENABLED=false

# ── Governance Thresholds ────────────────────────
HFO_GOV_SAMPLE_INTERVAL_S=10
HFO_GOV_WINDOW_SIZE=60
HFO_GOV_COOLDOWN_S=300
HFO_GOV_HEARTBEAT_S=300
HFO_GOV_CPU_OVER_PCT=80.0
HFO_GOV_RAM_OVER_PCT=85.0
HFO_GOV_CPU_UNDER_PCT=15.0
HFO_GOV_REGIME_THRESHOLD_PCT=70.0

# ── Daemon Intervals (seconds, 0=disabled) ──────
HFO_DAEMON_ENRICH_INTERVAL_S=300
HFO_DAEMON_RESEARCH_INTERVAL_S=600
HFO_DAEMON_CODEGEN_INTERVAL_S=900
HFO_DAEMON_PATROL_INTERVAL_S=120
HFO_DAEMON_WATCHDOG_INTERVAL_S=30

# ── Swarm ────────────────────────────────────────
HFO_SWARM_MAX_CONCURRENT=2
HFO_SWARM_PROVIDER_STRATEGY=gemini_first

# ── Google Gemini ──────────────────────────────────────
# Free API key: https://aistudio.google.com/apikey
# Sign in with same Google account that has Ultra subscription
# Ultra = higher rate limits (1500 RPD flash, 25 RPD pro free tier)
GOOGLE_API_KEY=
GEMINI_API_KEY=

# ── Google Vertex AI (RECOMMENDED — uses your Ultra $100/mo credits) ──
# As of Jan 27 2026: AI Pro = $10/mo credits, AI Ultra = $100/mo credits
# Credits ONLY work through Vertex AI, NOT direct AI Studio API.
# Setup (one-time, 5 minutes):
#   1. Go to developers.google.com/program → Activate premium benefits
#   2. Link benefits to a GCP billing account
#   3. Install gcloud CLI: cloud.google.com/sdk/docs/install
#   4. Run: gcloud auth application-default login
#   5. Create a project: gcloud projects create hfo-gen90 (or use existing)
#   6. Set the project ID below
# Once set, all Gemini calls automatically route through Vertex AI (credits applied)
HFO_VERTEX_PROJECT=
HFO_VERTEX_LOCATION=us-central1
BRAVE_API_KEY=
GITHUB_API_KEY=
